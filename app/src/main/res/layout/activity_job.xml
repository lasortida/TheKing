<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".LearningActivity"
    android:id="@+id/fullscreen">

    <ImageView
        android:id="@+id/imageViewCorona"
        android:layout_width="181dp"
        android:layout_height="181dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.556"
        app:srcCompat="@drawable/corona" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="412dp"
        android:layout_height="130dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewBreadUnderwrite"
            android:layout_width="65dp"
            android:layout_height="31dp"
            android:layout_marginEnd="19dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewBread"
            app:srcCompat="@drawable/underwrite" />

        <ImageView
            android:id="@+id/imageViewAnvil"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewBread"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/anvil_third" />

        <ImageView
            android:id="@+id/imageViewCoin"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/coin_third" />

        <ImageView
            android:id="@+id/imageViewBomb"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewCoin"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bomb_third" />

        <ImageView
            android:id="@+id/imageViewTie"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewAnvil"

            app:layout_constraintStart_toEndOf="@+id/imageViewBomb"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tie_third" />

        <ImageView
            android:id="@+id/imageViewBread"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bread_third" />

        <ImageView
            android:id="@+id/imageViewBombUnderwrite"
            android:layout_width="65dp"
            android:layout_height="31dp"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewCoinUnderwrite"
            app:layout_constraintTop_toBottomOf="@+id/imageViewBomb"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/underwrite" />

        <ImageView
            android:id="@+id/imageViewTieUnderwrite"
            android:layout_width="65dp"
            android:layout_height="31dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewAnvilUnderwrite"
            app:layout_constraintStart_toEndOf="@+id/imageViewBombUnderwrite"
            app:layout_constraintTop_toBottomOf="@+id/imageViewTie"
            app:srcCompat="@drawable/underwrite" />

        <ImageView
            android:id="@+id/imageViewAnvilUnderwrite"
            android:layout_width="65dp"
            android:layout_height="31dp"
            android:layout_marginEnd="10dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewBreadUnderwrite"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAnvil"
            app:srcCompat="@drawable/underwrite" />

        <ImageView
            android:id="@+id/imageViewCoinUnderwrite"
            android:layout_width="65dp"
            android:layout_height="31dp"
            android:layout_marginStart="25dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCoin"
            app:srcCompat="@drawable/underwrite" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textLeft"
            android:layout_width="120dp"
            android:layout_height="68dp"
            android:layout_marginStart="52dp"
            android:text="@string/textviewstart"
            android:textAlignment="center"
            android:textSize="15dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textRight"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454" />

        <TextView
            android:id="@+id/textRight"
            android:layout_width="120dp"
            android:layout_height="68dp"
            android:layout_marginEnd="52dp"
            android:text="@string/textviewstart"
            android:textAlignment="center"
            android:textSize="15dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.483" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.629">

        <TextView
            android:id="@+id/textViewTask"
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:background="@drawable/textview"
            android:gravity="center"
            android:text="Начнём игру!"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background_screen"
        android:visibility="invisible"
        android:background="#272727"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/textViewGameOver"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="156dp"
            android:fontFamily="monospace"
            android:text="GameOver"
            android:textColor="@color/white"
            android:textSize="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>